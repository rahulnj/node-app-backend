{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@Controllers/*": ["src/controllers/*"],
      "@Routes/*": ["src/routes/*"],
      "@Models/*": ["src/models/*"],
      "@Config/*": ["src/config/*"],
      "@Db/*": ["src/db/*"],
    },
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
